<Window x:Class="POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS" Height="500" Width="400">

    <Grid Margin="10">
        <TabControl>
            <TabItem Header="PAYMENT">
                <StackPanel Margin="10">
                    <Border
                        Margin="10"
                        Height="100"
                        Background="Gray"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5">

                        <TextBox
                            x:Name="PaymentTextBox"
                            Background="LightGreen"
                            Foreground="Black"
                            FontFamily="Consolas"
                            FontSize="14"
                            IsReadOnly="True"
                            BorderThickness="0"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            Padding="10"/>
                    </Border>
                    
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="148*"/>
                            <ColumnDefinition Width="148*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="PAN" Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" Background="Yellow" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="PanTextBox" Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="2"/>

                        <Label Content="Name" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5" Background="CornflowerBlue" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="NameTextBox" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="2"/>

                        <Label Content="Expiration Date" Grid.Row="3" Grid.Column="0" Margin="5,5,5,5" Background="Orange" Foreground="Black" FontWeight="Bold" FontSize="10" />
                        <TextBox x:Name="ExpMonthTextBox"  Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="ExpYearTextBox" Grid.Row="3" Grid.Column="2" Margin="5,5,5,5" Grid.ColumnSpan="2"/>

                        <Label Content="PIN" Grid.Row="4" Grid.Column="0" Margin="5,5,5,5" Background="Red" Foreground="Black" FontWeight="Bold"/>
                        <PasswordBox x:Name="PinTextBox" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="2"/>

                    </Grid>

                    <Button Click="PayButton_Click"
                        Content="PAY"
                        Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                        Height="30"
                        Width="70"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Green"/>
                                <Setter Property="BorderBrush" Value="DarkGreen"/>
                                <Setter Property="BorderThickness" Value="1"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">

                                                <ContentPresenter
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border"
                                                            Property="Background"
                                                            Value="DarkGreen"/>
                                                </Trigger>

                                                <!-- Pressed -->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border"
                                                            Property="Background"
                                                            Value="#FF0B5F0B"/>
                                                </Trigger>

                                                <!-- Disabled -->
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border"
                                                            Property="Opacity"
                                                            Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </TabItem>

            <TabItem Header="MAINTENANCE">
                <StackPanel Margin="10">
                    <Border
                        Margin="10"
                        Height="100"
                        Background="Gray"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="5">

                        <TextBox
                            x:Name="ConfigurationTextBox"
                            Background="LightGreen"
                            Foreground="Black"
                            FontFamily="Consolas"
                            FontSize="14"
                            BorderThickness="0"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            Padding="10"/>
                    </Border>


                    <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Merchant ID" Grid.Row="0" Grid.Column="0" Margin="5" Background="Yellow" Foreground="Black" FontWeight="Bold"/>
                    <TextBox x:Name="MerchantIdTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <Label Content="Terminal ID" Grid.Row="1" Grid.Column="0" Margin="5" Background="Red" Foreground="Black" FontWeight="Bold"/>
                    <TextBox x:Name="TerminalIdTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <Label Content="Merchant Name" Grid.Row="2" Grid.Column="0" Margin="5" Background="Green" Foreground="Black" FontWeight="Bold"/>
                     <TextBox x:Name="MerchantNameTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <Label Content="Merchant Location" Grid.Row="3" Grid.Column="0" Margin="5" Background="CadetBlue" Foreground="Black" FontWeight="Bold"/>
                    <TextBox x:Name="MerchantLocationTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>
                </Grid>

                    <Button Click="SaveConfigurationbButton_Click"
                        Content="SAVE CONFIGURATION"
                        Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                        Height="30"
                        Width="150"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Green"/>
                                <Setter Property="BorderBrush" Value="DarkGreen"/>
                                <Setter Property="BorderThickness" Value="1"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4">

                                                <ContentPresenter
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <!-- Hover -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border"
                                                            Property="Background"
                                                            Value="DarkGreen"/>
                                                </Trigger>

                                                <!-- Pressed -->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border"
                                                            Property="Background"
                                                            Value="#FF0B5F0B"/>
                                                </Trigger>

                                                <!-- Disabled -->
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border"
                                                            Property="Opacity"
                                                            Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </TabItem> 
        </TabControl>
    </Grid>
</Window>